html,
body
  width 100%
  height 100%
  font-size 15px
  color #666666

body
  margin 0
  font-family "Arial", sans-serif

.page
  display block
  margin-top 0
  margin-bottom 0
  margin-left auto
  margin-right auto
  width 1500px

.before-header
  padding 0
  width 100%
  height 70px

#menu-btn
  display block
  position relative
  width 60px
  height 100%
  float right

  span
    display block
    position absolute
    top 30px
    left 15px
    width 30px
    height 5px
    background-color #666666
    border-radius 20px

  span:before
    display block
    position absolute
    top -10px
    width 30px
    height 5px
    background-color #666666
    border-radius 20px
    content ""

  span:after
    display block
    position absolute
    top 10px
    width 30px
    height 5px
    background-color #666666
    border-radius 20px
    content ""

#menu-btn:hover
  background-color #E0E0E0

.title
  margin-top 10px
  margin-bottom 10px
  text-align center
  font-size 36px
.header
  p
    margin-top 20px
    text-align center
    font-weight bold
  
  .toggle
    margin-top 40px
    text-align center

  .btn-toggle
    display inline-block
    padding 10px 20px 10px 20px
    color white
    font-weight bold
    text-decoration none
    background-color #666666

  .btn-toggle:hover
    color #666666
    font-weight normal
    background-color #E0E0E0


.page-menu
  display none

.page-menu-active
  display block
  position absolute
  top 0
  overflow hidden
  width 100%
  min-height 100%
  font-size 38px
  background-color black

    
.before-menu
  padding 0
  width 100%
  height 110px

#exit-btn
  display block
  position relative
  width 100px
  height 100%
  float right

  span
    display block
    position absolute
    top 50px
    left 25px
    width 50px
    height 14px
    transform rotate(45deg)
    background-color white
    border-radius 4px

  span:after
    display block
    position absolute
    width 50px
    height 14px
    transform rotate(-90deg)
    background-color white
    border-radius 4px
    content ""

#exit-btn:hover
  background-color #E0E0E0
  span,
  span:after
    background-color black

.menu
  margin-top 50px
  a
    display block
    margin 25px
    text-align center
    list-style none
    text-decoration none
    color #666666
  a:hover
    color white

