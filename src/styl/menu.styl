html,
body
  width 100%
  height 100%
  font-size 38px
  color #666666
  background-color black

body
  margin 0
  font-family "Arial", sans-serif

.page
  width 100%
  height 100%
  

.before-header
  padding 0
  width 100%
  height 110px

.exit-btn
  display block
  position relative
  width 100px
  height 100%
  float right

  span
    display block
    position absolute
    top 50px
    left 25px
    width 50px
    height 14px
    transform rotate(45deg)
    background-color white
    border-radius 4px

  span:after
    display block
    position absolute
    width 50px
    height 14px
    transform rotate(-90deg)
    background-color white
    border-radius 4px
    content ""

.exit-btn:hover
  background-color #E0E0E0
  span,
  span:after
    background-color black

.menu
  margin-top 50px
  a
    display block
    margin 25px
    text-align center
    list-style none
    text-decoration none
    color #666666
  a:hover
    color white

  